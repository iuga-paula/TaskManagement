
@{
    ViewBag.Title = "UserInfo";
}


<div class="icon-box">
    <i class="glyphicon glyphicon-user"></i> Username: <span class="label label-default">@Model.UserName</span>

    <br />
    <i class="glyphicon glyphicon-envelope"></i> Email: <span class="label label-default">@Model.Email</span>
    <br />
    <br />
    <div class="d-inline">
        <a href="/Users/Edit/@Model.Id" class="btn-outline-info"><button class="btn btn-info">Edit User</button></a><br />
    </div>
    <br />
    @using (Html.BeginForm(actionName: "Delete", controllerName: "Users", routeValues: new { id = Model.Id }))
    {
        @Html.HttpMethodOverride(HttpVerbs.Delete)
        <div class="d-inline">
            <button type="submit" class="btn btn-danger">Delete User</button>
        </div>
    }
</div>
