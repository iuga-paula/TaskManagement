@model Task_Management.Models.Comment

@{
    ViewBag.Title = "Edit";
}
<main id="main">
    <section id="services" class="services section-bg">
        <div class="container">

            <div class="section-title">
                <h2>Edit Comment</h2>
            </div>
            <hr />

            <br />


            <form method="post" action="/Comments/Edit/@Model.CommentId">
                @Html.HttpMethodOverride(HttpVerbs.Put)

                @Html.ValidationSummary(false, null, new { @class = "text-danger" })

                @Html.Hidden("CommentId")

                @Html.Label("Content", "Comment Content")
                

                <br />
                @Html.EditorFor(m => m.Content, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Content", null, new { @class = "text-danger" })
                <br /><br />
                @Html.Hidden("Date")
                <br />
                <button type="submit" class="btn btn-success">Modify comment</button>
            </form>
            </div>
</section>
 </main>